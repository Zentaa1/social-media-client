{
    "env": {
      "browser": true,
      "es2021": true,
      "jest/globals": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
      {
        "files": ["**/*.cy.js"],
        "env": { "cypress/globals": true },
        "plugins": ["cypress", "jest"],
        "extends": ["plugin:cypress/recommended", "plugin:jest/recommended"],
        "rules": {
          "cypress/no-unnecessary-waiting": "off",
          "no-unused-vars": "off",
          "jest/prefer-expect-assertions": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    }
  }

